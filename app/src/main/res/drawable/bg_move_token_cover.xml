<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Shadow -->
<item>
    <shape android:shape="rectangle">
        <solid android:color="#14000000" /> <!-- 8% black -->
        <corners android:radius="16dp" />
    </shape>
</item>

<!-- Radial Gradient Background -->
<item>
    <shape android:shape="rectangle">
        <gradient
            android:startColor="@color/move_token_cover_color"
            android:endColor="@color/white_8"
            android:angle="270" />
        <corners android:radius="16dp"/>
    </shape>
</item>
</layer-list>