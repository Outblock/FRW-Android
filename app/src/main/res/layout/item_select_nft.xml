<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_nft_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/view_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_select_nft_cover"
        app:layout_constraintStart_toStartOf="@id/iv_nft_image"
        app:layout_constraintEnd_toEndOf="@id/iv_nft_image"
        app:layout_constraintTop_toTopOf="@id/iv_nft_image"
        app:layout_constraintBottom_toBottomOf="@id/iv_nft_image"/>
    
    <ImageView
        android:id="@+id/iv_check_box"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_check_normal_white"
        app:layout_constraintTop_toTopOf="@id/iv_nft_image"
        app:layout_constraintEnd_toEndOf="@id/iv_nft_image"/>

</androidx.constraintlayout.widget.ConstraintLayout>